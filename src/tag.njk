---js
{
  layout: "page",
  pagination: {
    data: "collections",
    size: 1,
    alias: "tag",
    filter: [
      'longform',
      'mediumform',
      'shortform',
    ]
  },
  eleventyComputed: {
    title: "{{ tag }} games",
  },
  permalink: "/tags/{{ tag | slugify }}/",
}
---

<div class="conteneur-principal font-sans">
  <h1 class="text-3xl lg:text-5xl 2xl:text-6xl pt-6 text-center">{{ title }}</h1>
  <div>
{%  set taglist = collections[ tag ] %}
{%  for currentReview in taglist %}
{%    include "layouts/partials/summary.njk" %}
{%  endfor %}
  </div>
</div>